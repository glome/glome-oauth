<div class="span12">
  <h2>Authorize <%= @client_id %> to use your account?</h2>
</div>

<div class="span12">
  <% if @scopes %>
  <p>
    This application will be able to:
  </p>
  <ul>
  </ul>
  <% end %>

  <div class="inline_block">
      <%= form_tag( @authorization_url, { :method => :post }) do%>
      <%= submit_tag( "Authorize", :class => "btn btn-success" ) %>	
      <input type="hidden" name="client_id" value="<%= @client_id %>" />
      <input type="hidden" name="client_secret" value="<%= @client_secret %>" />
      <input type="hidden" name="<%= @resp_type %>" value="<%= @grant_type %>" />	
      <input type="hidden" name="username" value="<%= @username %>" />
      <input type="hidden" name="password" value="<%= @password %>" />
      <input type="hidden" name="redirect_uri" value="<%= @redirect_uri %>" />
    <% end %>
  </div>
  <div class="inline_block">
      <%= form_tag( @redirect_url, { :method => :post }) do%>
      <%= submit_tag( "Deny", :class => "btn" ) %>	
    <% end %>
  </div>
</div>
