<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd"
>
<parameters>
    <parameter key="glome.entity.user.class">Glome\ApiBundle\Entity\User</parameter>
    <parameter key="glome.user.provider.class">Glome\ApiBundle\Provider\UserProvider</parameter>
</parameters>

<services>
    <service id="glome.user.manager" class="Doctrine\ORM\EntityManager"
             factory-service="doctrine" factory-method="getManagerForClass">
        <argument>%glome.entity.user.class%</argument>
    </service>

    <service id="glome.user.repository"
             class="Glome\ApiBundle\Repository\UserRepository"
             factory-service="glome.user.manager" factory-method="getRepository">
        <argument>%glome.entity.user.class%</argument>
    </service>

    <service id="glome.user.provider" class="%glome.user.provider.class%">
        <argument type="service" id="glome.user.repository" />
    </service>
</services>
</container>
